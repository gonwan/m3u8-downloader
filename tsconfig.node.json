{
  /* for node environment */
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"], /* Promise.any() */
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["vite.config.ts", "src/lib/*.ts", "electron"]
}
